@using System.Text.Json
@model QWSandbox.CQRS.Web.Models.Home.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style type="text/css">
	.users__scroll-container {
		max-height: 300px;
		overflow-x: hidden;
		overflow-y: auto;
	}
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Надпись.</p>
</div>

<div class="row mb-3">
	<div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-xxl-6 offset-xxl-3">
		<div class="card">
			<div class="card-body bg-light">
				<h5 class="card-title">Пользователи</h5>
			</div>
			<div class="users__scroll-container">
				<ul class="list-group list-group-flush">
					@foreach (var user in Model.Users)
					{
						<li class="list-group-item">
<pre>
@System.Text.RegularExpressions.Regex.Unescape(JsonSerializer.Serialize(user, new JsonSerializerOptions{WriteIndented = true}))
</pre>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-xxl-6 offset-xxl-3">
		<form asp-action="Index" method="post">
			<div class="mb-3">
				<label class="form-label w-100">
					Имя
					<input name="Name" type="text" class="form-control w-100">
				</label>
			</div>
			<div class="mb-3">
				<label class="form-label w-100">
					Email
					<input name="Email" type="email" class="form-control w-100" placeholder="name@example.com">
				</label>
			</div>
			<div class="mb-3">
				<label class="form-label w-100">
					Комментарий
					<textarea name="Comment" class="form-control w-100" rows="3"></textarea>
				</label>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<div class="mt-3 text-danger" asp-validation-summary="All"></div>
		</form>
	</div>
</div>